<%- layout("../layout.ejs") %>
<script type="text/javascript" src="/js/controllers/approveController.js"></script>
<div class="container" ng-controller="ApproveController" ng-init="init()">
    <div class="col-lg-12" ng-show="showList()">
        <ul class="list-group">
            <li class="list-group-item" ng-repeat="char in characters">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {{char.name}} ({{char.clan}})
                    </div>
                    <div class="panel-body">
                        {{char.concept}}
                    </div>
                    <div class="panel-footer">

                        <div class="form-inline">
                            <div class="form-group">
                                <button class="btn btn-primary form-control" ng-click="approve(char.id)">Approve</button>
                                <button class="btn btn-default form-control" ng-click="reject(char.id, char.rejectionreason)">Reject</button>
                            </div>
                        </div>
                        <div class="form-horizontal margin5">
                            <div class="form-group">
                                <label class="label" >Rejection reason (optional):</label>
                                <textarea ng-model="char.rejectionreason" class="form-control col-lg-6" rows="1"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>

    <div class="col-lg-12" ng-hide="showList()">
        No concepts left for approval
    </div>
</div>