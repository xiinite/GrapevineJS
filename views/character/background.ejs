<% layout("../layout.ejs") %>
<script type="text/javascript" src="/js/controllers/backgroundController.js"></script>
<div class="container" ng-controller="BackgroundController" ng-init="init('<%= characterid %>')">
    <h1 class="page-header">Background for {{character.name}}
        <div class='btn-toolbar pull-right hidden-print'>
            <div class='btn-group'>
                <a class='btn btn-info' href="/character/show/<%= characterid %>"><span class="glyphicon glyphicon-pawn"></span>
                    Back
                </a>
            </div>
        </div>
    </h1>
    <div class="col-lg-12" ng-hide="submitted">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="label">Background:</label>
                <textarea class="form-control" ng-model="background" rows="10"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" ng-confirm-click="Are you sure?" ng-click="submitForm()">Submit background</button>
            </div>
        </div>
    </div>
    <div class="col-lg-12" ng-hide="editting">
        {{character.background}}
    </div>
</div>