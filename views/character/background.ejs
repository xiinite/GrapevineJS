<% layout("../layout.ejs") %>
<%- partial('./scripts') %>
<script type="text/javascript" src="/js/controllers/cymeriad.controller.character.background.js"></script>
<div class="container" ng-app="cymeriad.app.character" ng-controller="cymeriad.controller.character.background" ng-init="init('<%= characterid %>')">
    <h1 class="page-header">Background for {{character.name}}
        <div class='btn-toolbar pull-right hidden-print'>
            <div class='btn-group'>
                <a class='btn btn-info' href="/character/show/<%= characterid %>"><span class="glyphicon glyphicon-pawn"></span>
                    Back
                </a>
            </div>
        </div>
    </h1>
    <h3 ng-show="character.concept">Concept:</h3>
    <div class="col-lg-12" ng-show="character.concept">
        {{character.concept}}
    </div>
    <h3 class="voffset">Background:</h3>
    <div class="col-lg-12" ng-hide="submitted">
        <h4>Add background: </h4>
        <div text-angular ng-model="background"></div>
        <div class="form-horizontal voffset3">
            <div class="form-group">
                <button class="btn btn-primary" ng-confirm-click="Are you sure?" ng-click="submitForm()">Submit background</button>
            </div>
        </div>
    </div>

    <div class="col-lg-12 ta-scroll-window ng-scope ta-text ta-editor form-control" ng-hide="editting" ng-bind-html="character.background">

    </div>
</div>