<%- layout("../layout.ejs") %>
<div class="container">
    <h1 class="page-header hidden-xs hidden-sm">New downtimeperiod</h1>

    <div class="col-lg-12">
        <div class="row">
            <form class="form-horizontal">
                <input type="hidden" value="<%= period.id %>" />
                <div class="form-group">
                    <label class="col-lg-2 control-label">openFrom:</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="date" value="<%= period.openFrom %>" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">openTo:</label>
                    <div class="col-sm-10">
                        <input class="col-sm-10 form-control" type="date" value="<%= period.openTo %>" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">chronicleId:</label>
                    <div class="col-sm-10">
                        <input class="col-sm-10 form-control" type="text" value="<%= period.chronicleId %>" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>