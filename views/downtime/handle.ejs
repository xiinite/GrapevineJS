<%- layout("../layout.ejs") %>
<%- partial('./scripts') %>
<script type='text/javascript' charset="utf-8" src="/js/controllers/cymeriad.controller.downtime.handle.js"></script>

<div class="container-fluid" ng-app="cymeriad.app.downtime" ng-controller="cymeriad.controller.downtime.handle"
     ng-init="init('<%= period %>')">
    <toast></toast>
    <div class="hidden-sm hidden-xs hidden-md col-lg-3" id="sidebar" role="navigation">

            <ul class="nav nav-pills nav-stacked">
                <li ng-class="{active: isActive('destroys')}" ng-show="hasDestroys()">
                    <a class="clickable" ng-click="setActive('destroys')">
                        Destroys
                    </a>
                </li>
                <li ng-class="{active: isActive(downtime)}" ng-repeat="downtime in downtimes">
                    <a class="clickable" ng-click="setActive(downtime.id)">
                        {{findCharacter(downtime.characterid).name}}
                        -
                        {{findCharacter(downtime.characterid).player.displayName}}
                        <div class="badge pull-right" ng-show="downtime.handled">
                            <span class="fa fa-check"></span>
                        </div>
                    </a>
                </li>
                <li ng-class="{active: isActive('grows')}" ng-show="hasGrows()">
                    <a class="clickable" ng-click="setActive('grows')">
                        Grows
                    </a>
                </li>
                <li ng-class="{active: isActive('feedings')}">
                    <a class="clickable" ng-click="setActive('feedings')">
                        Feeding report
                    </a>
                </li>
            </ul>

    </div>
    <div class="col-lg-9 col-md-12">
        <!-- NAVIGATION BUTTONS -->
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-3 col-lg-1">
                    <button class="btn btn-default btn-block" ng-click="previous()">Previous</button>
                </div>
                <div class="hidden-md col-lg-4">
                </div>
                <div class="col-md-3 col-lg-1 text-nowrap">
                    {{findIndex(active) +1}} / {{downtimes.length}}
                </div>
                <div class="col-md-3 col-lg-1">
                    <button class="btn btn-primary btn-block" ng-click="save()">Save</button>
                </div>
                <div class="hidden-md col-lg-4">
                </div>
                <div class="col-md-3 col-lg-1">
                    <button class="btn btn-default btn-block" ng-click="next()">Next</button>
                </div>
            </div>
        </div>

        <!-- AUTORESOLVABLE DESTROY-->
        <div class="col-lg-12">
            <div class="row" ng-show="isActive('destroys')" ng-class="getDirection()" ng-swipe-disable-mouse ng-swipe-left="previous()"
                 ng-swipe-right="next()">
                <h1>Destroys:</h1>
                <div ng-repeat="action in flatten(downtimes)" ng-if="action.action === 'Destroy'">
                    <div>
                        <div class="row">

                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th colspan="2">
                                        <h4 class="uppercase">{{action.charactername}} -
                                            {{findCharacter(findDowntime(action.dt).characterid).player.displayName}}</h4>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="col-xs-3">Influence</td>
                                    <td><span>{{action.name}} - Rating {{findInfluenceValue(findCharacter(findDowntime(action.dt).characterid),action.name)}}</span></td>
                                </tr>
                                <tr>
                                    <td class="col-xs-3">Action</td>
                                    <td ng-show="action.action === 'Destroy'"><span class="label-as-badge label-danger">{{action.action}}</span></td>
                                    <td ng-show="action.action === 'Grow'"><span class="label-as-badge label-success">{{action.action}}</span></td>
                                </tr>
                                <tr ng-show="action.location">
                                    <td class="col-xs-3">Location</td>
                                    <td>{{action.location}}</td>
                                </tr>
                                <tr ng-show="action.location">
                                    <td class="col-xs-3">Other players active here:</td>
                                    <td>{{getPlayersInLocation(action.dt.characterid, action.location)}}</td>
                                </tr>
                                <tr ng-show="action.description">
                                    <td class="col-xs-3">Description</td>
                                    <td>{{action.description}}</td>
                                </tr>
                                <tr ng-show="action.target">
                                    <td class="col-xs-3">Target</td>
                                    <td>
                                        {{action.target}}
                                    </td>
                                </tr>
                                <tr ng-show="action.targetBackground">
                                    <td class="col-xs-3">Target</td>
                                    <td>
                                        {{action.targetBackground}} - Rating
                                        {{findInfluenceValue(findCharacterByName(action.target),action.targetBackground)}}
                                        <span class="label-as-badge label-danger" ng-show="isDefending(findCharacterByName(action.target), action.targetBackground)">
                                            defending: {{isDefending(findCharacterByName(action.target), action.targetBackground)}}
                                        </span>
                                    </td>
                                </tr>
                                <tr ng-repeat="ac in findAssistsByPlayer(action.targetBackground, action.target)">
                                    <td>Pooled with</td>
                                    <td>{{ac.assister}}: {{ac.name.replace('Action', '')}} (
                                    <span ng-show="ac.name.indexOf('Action') > -1">
                                        {{findBackgroundValue(findCharacter(ac.characterid), ac.name.replace('Action', ''))}}
                                    </span>
                                    <span ng-show="ac.name.indexOf('Action') === -1">
                                        {{findInfluenceValue(findCharacter(ac.characterid),ac.name)}}
                                    </span>
                                        )
                                        <a class="btn btn-default pull-right badge" target="_blank"
                                           ng-href="/character/show/{{ac.characterid}}">View character</a>
                                    </td>
                                </tr>
                                <tr ng-show="action.order">
                                    <td class="col-xs-3">Order</td>
                                    <td>{{action.order}}</td>
                                </tr>
                                <tr ng-show="action.test" ng-class="getResultClass(action)">
                                    <td class="col-xs-3">Test</td>
                                    <td>
                                        <div class="col-xs12 col-md-6" >
                                            <div>
                                                Player:
                                                <span ng-class="getTestresultIconClass(action.test)"></span>
                                                {{action.test}}
                                            </div>
                                            <div ng-show='action.testresult'>
                                                Server:
                                                <span ng-show='action.testresult' ng-class="getTestresultIconClass(action.testresult)"></span>
                                                <span ng-show='action.testresult'>{{action.testresult}}</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <dl>
                                                <dt>Pick a server result</dt>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="action.testresult" value="rock">
                                                        <span class="fa fa-hand-rock-o"> rock</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="action.testresult" value="paper">
                                                        <span class="fa fa-hand-paper-o"> paper</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="action.testresult" value="scissors">
                                                        <span class="fa fa-hand-scissors-o"> scissors</span>
                                                    </label>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <button class='btn btn-default' ng-click='getRandomRPC(action)'>Get Random</button>
                                        <div>
                                    </td>
                                </tr>
                                <tr ng-show="showTotalTraits(action)">
                                    <td>
                                        Total traits:
                                    </td>
                                    <td>
                                        <span>{{action.totalValue}}</span>
                                    </td>
                                </tr>
                                <tr ng-repeat="ac in findAssists(findDowntime(action.dt), action.name)">
                                    <td>Assisted by</td>
                                    <td>{{ac.assister}}: {{ac.name.replace('Action', '')}} (
                                    <span ng-show="ac.name.indexOf('Action') > -1">
                                        {{findBackgroundValue(findCharacter(ac.characterid), ac.name.replace('Action', ''))}}
                                    </span>
                                    <span ng-show="ac.name.indexOf('Action') === -1">
                                        {{findInfluenceValue(findCharacter(ac.characterid),ac.name)}}
                                    </span>
                                        )
                                        <a class="btn btn-default pull-right badge" target="_blank"
                                           ng-href="/character/show/{{ac.characterid}}">View character</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-xs-3">Outcome:</td>
                                    <td>
                                        <md-radio-group ng-model="action.outcome" >
                                            <md-radio-button ng-disabled="action.handled" value="success" class="md-primary">Success</md-radio-button>
                                            <md-radio-button ng-disabled="action.handled" value="fail">Fail</md-radio-button>
                                        </md-radio-group>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Response <small>(optional)</small>:</td>
                                    <td>
                                    <textarea class="form-control" rows="5"
                                              ng-model-options="{ updateOn: 'blur' }"
                                              ng-model="action.response">
                                    </textarea>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <button class="btn btn-primary" ng-disabled="!action.outcome || action.handled" ng-click="updateSave(action)">Save and update</button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- DOWNTIMES -->
        <div class="col-lg-12" ng-repeat="downtime in downtimes">
            <div class="row" ng-show="isActive(downtime)" ng-class="getDirection()" ng-swipe-disable-mouse ng-swipe-left="previous()"
                 ng-swipe-right="next()">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {{ findCharacter(downtime.characterid).name }}
                        -
                        {{findCharacter(downtime.characterid).player.displayName}}
                    </h1>
                    <a class="btn btn-default pull-right badge" target="_blank"
                       ng-href="/character/edit/{{downtime.characterid}}">Edit character</a>

                    <h3>Downtime for {{period.openFrom | date}}</h3> <!-- Influences -->

                    <md-checkbox ng-disabled="false" md-no-ink aria-label="Handled" ng-model="downtime.handled">
                        Handled
                    </md-checkbox>

                    <h2>Rating</h2>

                    <div class="row">
                        <div class="col-sm-12" ng-show="downtime.actions.previousSessionRating">
                            <div class="col-sm-3">Session rating:</div>
                            <div class="col-sm-9">
                                <rating ng-model="downtime.actions.previousSessionRating.rating" max="5" readonly="true" ></rating>
                            </div>
                            <div class="col-sm-3" ng-show="downtime.actions.previousSessionRating.description">Note:</div>
                            <div class="col-sm-9" ng-show="downtime.actions.previousSessionRating.description">{{downtime.actions.previousSessionRating.description}}</div>
                            <div class="col-sm-3">Feedback:</div>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="5"
                                          ng-model-options="{ updateOn: 'blur' }"
                                          ng-model="downtime.actions.previousSessionRating.response">
                                </textarea>
                            </div>
                        </div>
                    </div>

                    <h2 ng-show="downtime.actions.xp">XP Spending</h2>

                    <div class="row" ng-show="downtime.actions.xp">
                        <div class="col-sm-12">
                            <div class="col-sm-3" ng-show="downtime.actions.xp">Description:</div>
                            <div class="col-sm-9" ng-show="downtime.actions.xp">{{downtime.actions.xp.description}}</div>
                            <div class="col-sm-3">Feedback:</div>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="5"
                                          ng-model-options="{ updateOn: 'blur' }"
                                          ng-model="downtime.actions.xp.response">
                                </textarea>
                            </div>
                        </div>
                    </div>

                    <h2>Actions</h2>

                    <div class="row" ng-repeat="(key, value) in downtime.actions"
                         ng-if="key.indexOf('Action') > -1 && value.action !== 'Assist' && key !== 'xp'">
                        <div class="col-sm-12">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th colspan="2">
                                        <h4 class="uppercase" ng-show="key.indexOf('player') === -1">
                                            {{key.replace('Action',
                                            '') + " - Rating " +
                                            findBackgroundValue(findCharacter(downtime.characterid),
                                            key.replace('Action',
                                            '')) }}</h4>
                                        <h4 class="uppercase" ng-hide="key.indexOf('player') === -1">{{key}}</h4>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="col-xs-3">Action</td>
                                    <td>{{value.action}}</td>
                                </tr>
                                <tr ng-show="value.location && !value.feedingtype">
                                    <td class="col-xs-3">Location</td>
                                    <td>{{value.location}}</td>
                                </tr>
                                <tr ng-show="value.location && value.feedingtype">
                                    <td class="col-xs-3">Location</td>
                                    <td>{{value.location.name}} (harvest: {{value.location.harvest}}, doom: {{value.location.doom}})</td>
                                </tr>
                                <tr ng-show="value.location">
                                    <td class="col-xs-3">Other players active here:</td>
                                    <td>{{getPlayersInLocation(downtime.characterid, value.location)}}</td>
                                </tr>
                                <tr ng-show="value.feedingtype">
                                    <td class="col-xs-3">Feeding Type (humanity/harvest/doom)</td>
                                    <td>{{value.feedingtype.type}} (humanity: {{value.feedingtype.humanity}}, harvest: {{value.feedingtype.harvest}}, doom: {{value.feedingtype.doom}})</td>
                                </tr>
                                <tr ng-show="value.feedingtype">
                                  <td class="col-xs-3">Total Doom</td>
                                  <td>{{parseInt(value.location.doom) + parseInt(value.feedingtype.doom) + getTotalFeeders(downtime.characterid, value.location.name)}}
                                    ({{value.location.doom}}
                                    + {{value.feedingtype.doom}}
                                    + {{getTotalFeeders(downtime.characterid, value.location.name)}})
                                  </td>
                                </tr>
                                <tr ng-show="value.feedingtype">
                                  <td class="col-xs-3">Draw doom</td>
                                  <td>
                                      <button class="btn btn-default" ng-click="drawDoom(value, parseInt(value.location.doom) + parseInt(value.feedingtype.doom) + getTotalFeeders(downtime.characterid, value.location.name))">Draw</button>
                                      <br /><span class="glyphicon glyphicon glyphicon-record" ng-attr-title="{{trait.type}}" ng-style="trait.css" ng-repeat="trait in value.doomtraits"></span>
                                  </td>
                                </tr>
                                <tr ng-show="value.description && (value.action !== 'No action' || value.action !== 'Relax')">
                                    <td class="col-xs-3">Description</td>
                                    <td>{{value.description}}</td>
                                </tr>
                                <tr ng-show="value.target">
                                    <td class="col-xs-3">Target</td>
                                    <td>{{value.target}}</td>
                                </tr>
                                <tr ng-show="value.order">
                                    <td class="col-xs-3">Order</td>
                                    <td>{{value.order}}</td>
                                </tr>
                                <tr ng-show="value.test" ng-class="getResultClass(value)">
                                    <td class="col-xs-3">Test</td>
                                    <td>
                                        <div class="col-xs12 col-md-6" >
                                            <div>
                                                Player:
                                                <span ng-class="getTestresultIconClass(value.test)"></span>
                                                {{value.test}}
                                            </div>
                                            <div ng-show='value.testresult'>
                                                Server:
                                                <span ng-show='value.testresult' ng-class="getTestresultIconClass(value.testresult)"></span>
                                                <span ng-show='value.testresult'>{{value.testresult}}</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <dl>
                                                <dt>Pick a server result</dt>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="value.testresult" value="rock">
                                                        <span class="fa fa-hand-rock-o"> rock</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="value.testresult" value="paper">
                                                        <span class="fa fa-hand-paper-o"> paper</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="value.testresult" value="scissors">
                                                        <span class="fa fa-hand-scissors-o"> scissors</span>
                                                    </label>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <button class='btn btn-default' ng-click='getRandomRPC(value)'>Get Random</button>
                                        <div>
                                    </td>
                                </tr>
                                <tr ng-show="showTotalTraits(value)">
                                    <td>
                                        Total traits:
                                    </td>
                                    <td>
                                        <span>{{getTotalTraits(value, downtime)}}</span>
                                    </td>
                                </tr>
                                <tr ng-repeat="ac in findAssists(downtime, key)">
                                    <td>Assisted by</td>
                                    <td>{{ac.assister}}: {{ac.name.replace('Action', '')}} (
                                    <span ng-show="ac.name.indexOf('Action') > -1">
                                        {{findBackgroundValue(findCharacter(ac.characterid), ac.name.replace('Action', ''))}}
                                    </span>
                                    <span ng-show="ac.name.indexOf('Action') === -1">
                                        {{findInfluenceValue(findCharacter(ac.characterid),ac.name)}}
                                    </span>
                                        )
                                        <a class="btn btn-default pull-right badge" target="_blank"
                                           ng-href="/character/show/{{ac.characterid}}">View character</a>
                                    </td>
                                </tr>
                                <tr ng-show="value.action !== 'No action' && value.action !== 'Relax (no action)'">
                                    <td>Response:</td>
                                    <td>
                                    <textarea class="form-control" rows="5"
                                              ng-model-options="{ updateOn: 'blur' }"
                                              ng-model="value.response">
                                    </textarea>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Influences -->
                    <h2 ng-show="hasInfluences(downtime)">Influences</h2>

                    <div class="row" ng-repeat="(key, value) in downtime.actions"
                         ng-if="key.indexOf('Action') === -1 && key !== 'xp' && key.indexOf('Rating') == -1 && value.action !== 'Assist'&& value.action !== 'Grow'&& value.action !== 'Destroy'">
                        <div class="col-sm-12">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th colspan="2"><h4 class="uppercase">{{key + " - Rating " +
                                            findInfluenceValue(findCharacter(downtime.characterid),key)}}</h4></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="col-xs-3">Action</td>
                                    <td>{{value.action}}</td>
                                </tr>
                                <tr ng-show="value.location">
                                    <td class="col-xs-3">Location</td>
                                    <td>{{value.location}}</td>
                                </tr>
                                <tr ng-show="value.location">
                                    <td class="col-xs-3">Other players active here:</td>
                                    <td>{{getPlayersInLocation(downtime.characterid, value.location)}}</td>
                                </tr>
                                <tr ng-show="value.description && value.action !== 'No action'">
                                    <td class="col-xs-3">Description</td>
                                    <td>{{value.description}}</td>
                                </tr>
                                <tr ng-show="value.target">
                                    <td class="col-xs-3">Target</td>
                                    <td>{{value.target}}</td>
                                </tr>
                                <tr ng-show="value.order">
                                    <td class="col-xs-3">Order</td>
                                    <td>{{value.order}}</td>
                                </tr>
                                <tr ng-show="value.test" ng-class="getResultClass(value)">
                                    <td class="col-xs-3">Test</td>
                                    <td>
                                        <div class="col-xs12 col-md-6" >
                                            <div>
                                                Player:
                                                <span ng-class="getTestresultIconClass(value.test)"></span>
                                                {{value.test}}
                                            </div>
                                            <div ng-show='value.testresult'>
                                                Server:
                                                <span ng-show='value.testresult' ng-class="getTestresultIconClass(value.testresult)"></span>
                                                <span ng-show='value.testresult'>{{value.testresult}}</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <dl>
                                                <dt>Pick a server result</dt>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="value.testresult" value="rock">
                                                        <span class="fa fa-hand-rock-o"> rock</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="value.testresult" value="paper">
                                                        <span class="fa fa-hand-paper-o"> paper</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="value.testresult" value="scissors">
                                                        <span class="fa fa-hand-scissors-o"> scissors</span>
                                                    </label>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <button class='btn btn-default' ng-click='getRandomRPC(value)'>Get Random</button>
                                        <div>
                                    </td>
                                </tr>
                                <tr ng-show="showTotalTraits(value)">
                                    <td>
                                        Total traits:
                                    </td>
                                    <td>
                                        <span>{{getTotalTraits(value, downtime)}}</span>
                                    </td>
                                </tr>
                                <tr ng-repeat="ac in findAssists(downtime, key)">
                                    <td>Assisted by</td>
                                    <td>{{ac.assister}}: {{ac.name.replace('Action', '')}} (
                                    <span ng-show="ac.name.indexOf('Action') > -1">
                                        {{findBackgroundValue(findCharacter(ac.characterid), ac.name.replace('Action', ''))}}
                                    </span>
                                    <span ng-show="ac.name.indexOf('Action') === -1">
                                        {{findInfluenceValue(findCharacter(ac.characterid),ac.name)}}
                                    </span>
                                        )
                                        <a class="btn btn-default pull-right badge" target="_blank"
                                           ng-href="/character/show/{{ac.characterid}}">View character</a>
                                    </td>
                                </tr>
                                <tr ng-show="value.action !== 'No action'">
                                    <td>Response:</td>
                                    <td>
                                    <textarea class="form-control" rows="5"
                                              ng-model-options="{ updateOn: 'blur' }"
                                              ng-model="value.response">
                                    </textarea>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Assists -->
                    <h2 ng-show="hasAssists(downtime)">Assists, grows and destroys</h2>

                    <div class="row" ng-repeat="(key, value) in downtime.actions"
                         ng-if="key.indexOf('Action') > -1 && (value.action === 'Assist' || value.action === 'Grow' || value.action === 'Destroy')">
                        <div class="col-sm-12">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th colspan="2">
                                        <h4 class="uppercase" ng-show="key.indexOf('player') === -1">
                                            {{key.replace('Action',
                                            '') + " - Rating " +
                                            findBackgroundValue(findCharacter(downtime.characterid),
                                            key.replace('Action',
                                            '')) }}</h4>
                                        <h4 class="uppercase" ng-hide="key.indexOf('player') === -1">{{key}}</h4>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="col-xs-3">Action</td>
                                    <td>{{value.action}} {{value.targetBackground}}: {{value.target}}</td>
                                </tr>
                                <tr ng-show="value.description">
                                    <td class="col-xs-3">Description</td>
                                    <td>{{value.description}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row" ng-repeat="(key, value) in downtime.actions"
                         ng-if="key.indexOf('Action') == -1 && (value.action === 'Assist' || value.action === 'Grow' || value.action === 'Destroy')">
                        <div class="col-sm-12">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th colspan="2"><h4 class="uppercase">{{key + " - Rating " +
                                            findInfluenceValue(findCharacter(downtime.characterid),key)}}</h4></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="col-xs-3">Action</td>
                                    <td>{{value.action}} {{value.targetBackground}}: {{value.target}}</td>
                                </tr>
                                <tr ng-show="value.description">
                                    <td class="col-xs-3">Description</td>
                                    <td>{{value.description}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Targetted by -->
                    <h2 ng-show="findTargets(downtime).length > 0">Targetted by</h2>
                    <div class="row" ng-repeat="action in findTargets(downtime)">
                        <div class="col-sm-12">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th colspan="2">
                                        <h4>{{action.char}}: {{action.name}}</h4>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="col-xs-3">Action</td>
                                    <td>{{action.action}}<span ng-show="action.targetBackground">: {{action.targetBackground}}</span></td>
                                </tr>
                                <tr ng-show="value.description">
                                    <td class="col-xs-3">Description</td>
                                    <td>{{action.description}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- AUTORESOLVABLE GROW-->
        <div class="col-lg-12">
            <div class="row" ng-show="isActive('grows')" ng-class="getDirection()" ng-swipe-disable-mouse ng-swipe-left="previous()"
                 ng-swipe-right="next()">
                <h1>Grows:</h1>
                <div ng-repeat="action in flatten(downtimes)" ng-if="action.action === 'Grow'">
                    <div >
                        <div class="row">

                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th colspan="2">
                                        <h4 class="uppercase">{{action.charactername}} -
                                            {{findCharacter(findDowntime(action.dt).characterid).player.displayName}}</h4>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="col-xs-3">Influence</td>
                                    <td><span>{{action.name}} - Rating {{findInfluenceValue(findCharacter(findDowntime(action.dt).characterid),action.name)}}</span></td>
                                </tr>
                                <tr>
                                    <td class="col-xs-3">Action</td>
                                    <td ng-show="action.action === 'Destroy'"><span class="label-as-badge label-danger">{{action.action}}</span></td>
                                    <td ng-show="action.action === 'Grow'"><span class="label-as-badge label-success">{{action.action}}</span></td>
                                </tr>
                                <tr ng-show="action.location">
                                    <td class="col-xs-3">Location</td>
                                    <td>{{action.location}}</td>
                                </tr>
                                <tr ng-show="action.location">
                                    <td class="col-xs-3">Other players active here:</td>
                                    <td>{{getPlayersInLocation(action.dt.characterid, action.location)}}</td>
                                </tr>
                                <tr ng-show="action.description">
                                    <td class="col-xs-3">Description</td>
                                    <td>{{action.description}}</td>
                                </tr>
                                <tr ng-show="action.target">
                                    <td class="col-xs-3">Target</td>
                                    <td>{{action.target}}</td>
                                </tr>
                                <tr ng-show="action.targetBackground">
                                    <td class="col-xs-3">Target</td>
                                    <td>
                                        {{action.targetBackground}} - Rating
                                        {{findInfluenceValue(findCharacterByName(action.target),action.targetBackground)}}
                                    </td>
                                </tr>
                                <tr ng-show="action.order">
                                    <td class="col-xs-3">Order</td>
                                    <td>{{action.order}}</td>
                                </tr>
                                <tr ng-show="action.test" ng-class="getResultClass(action)">
                                    <td class="col-xs-3">Test</td>
                                    <td>
                                        <div class="col-xs12 col-md-6" >
                                            <div>
                                                Player:
                                                <span ng-class="getTestresultIconClass(action.test)"></span>
                                                {{action.test}}
                                            </div>
                                            <div ng-show='action.testresult'>
                                                Server:
                                                <span ng-show='action.testresult' ng-class="getTestresultIconClass(action.testresult)"></span>
                                                <span ng-show='action.testresult'>{{action.testresult}}</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <dl>
                                                <dt>Pick a server result</dt>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="action.testresult" value="rock">
                                                        <span class="fa fa-hand-rock-o"> rock</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="action.testresult" value="paper">
                                                        <span class="fa fa-hand-paper-o"> paper</span>
                                                    </label>
                                                </dd>
                                                <dd>
                                                    <label class="clickable">
                                                        <input type="radio" ng-model="action.testresult" value="scissors">
                                                        <span class="fa fa-hand-scissors-o"> scissors</span>
                                                    </label>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="col-xs-12 col-md-3">
                                            <button class='btn btn-default' ng-click='getRandomRPC(action)'>Get Random</button>
                                        <div>
                                    </td>
                                </tr>
                                <tr ng-show="showTotalTraits(action)">
                                    <td>
                                        Total traits:
                                    </td>
                                    <td>
                                        <span>{{action.totalValue}}</span>
                                    </td>
                                </tr>
                                <tr ng-repeat="ac in findAssists(findDowntime(action.dt), action.name)">
                                    <td>Assisted by</td>
                                    <td>{{ac.assister}}: {{ac.name.replace('Action', '')}} (
                                    <span ng-show="ac.name.indexOf('Action') > -1">
                                        {{findBackgroundValue(findCharacter(ac.characterid), ac.name.replace('Action', ''))}}
                                    </span>
                                    <span ng-show="ac.name.indexOf('Action') === -1">
                                        {{findInfluenceValue(findCharacter(ac.characterid),ac.name)}}
                                    </span>
                                        )
                                        <a class="btn btn-default pull-right badge" target="_blank"
                                           ng-href="/character/show/{{ac.characterid}}">View character</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-xs-3">Outcome:</td>
                                    <td>
                                        <md-radio-group ng-model="action.outcome" >
                                            <md-radio-button ng-disabled="action.handled" value="success" class="md-primary">Success</md-radio-button>
                                            <md-radio-button ng-disabled="action.handled" value="fail">Fail</md-radio-button>
                                        </md-radio-group>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Response <small>(optional)</small>:</td>
                                    <td>
                                    <textarea class="form-control" rows="5"
                                              ng-model-options="{ updateOn: 'blur' }"
                                              ng-model="action.response">
                                    </textarea>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <button class="btn btn-primary" ng-disabled="!action.outcome || action.handled" ng-click="updateSave(action)">Save and update</button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- RAPPORT FEEDING -->
        <div class="col-lg-12">
              <div class="row" ng-show="isActive('feedings')" ng-class="getDirection()" ng-swipe-disable-mouse ng-swipe-left="previous()"
                   ng-swipe-right="next()">
                  <h1>Feeding:</h1>
                  <table class="table table-striped">
                    <tr>
                      <th>Name</th>
                      <th>Location</th>
                      <th>Type</th>
                      <th>Doom</th>
                      <th>Harvest</th>
                    </tr>
                    <tr ng-repeat="action in flatten(downtimes) | orderBy: 'charactername'" ng-if="action.action === 'Feed'">
                      <td>{{action.charactername}}</td>
                      <td>{{action.location.name}}</td>
                      <td>{{action.feedingtype.type}}</td>
                      <td>{{parseInt(action.location.doom) + parseInt(action.feedingtype.doom) + getTotalFeeders(findDowntime(action.dt).characterid, action.location.name)}}
                        ({{action.location.doom}}
                        + {{action.feedingtype.doom}}
                        + {{getTotalFeeders(findDowntime(action.dt).characterid, action.location.name)}})</td>
                      <td>{{parseInt(action.location.harvest) + parseInt(action.feedingtype.harvest)}} ({{action.location.harvest}} + {{action.feedingtype.harvest}})</td>
                    </tr>
                  </table>
              </div>
        </div>
    </div>
</div>
